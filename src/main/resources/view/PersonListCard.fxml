<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<HBox fx:id="cardPane"  xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane minHeight="110.0" prefHeight="110.0" maxHeight="110.0" HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" prefWidth="100.0" maxWidth="100.0"/>
        </columnConstraints>
        <children>
            <VBox  minHeight="110.0" prefHeight="110.0" maxHeight="110.0" GridPane.columnIndex="0">
                <stylesheets>
                    <URL value="@DarkTheme.css" />
                    <URL value="@Extensions.css" />
                </stylesheets>
                <padding>
                    <Insets bottom="5" left="15" right="5" top="5" />
                </padding>

                <children>
                    <HBox spacing="5" >
                        <Label fx:id="idLabel" />
                        <Label fx:id="firstName" />
                        <Label fx:id="lastName"  />
                    </HBox>
                    <Label fx:id="address"  styleClass="cell_small_label" >
                    </Label>
                    <Label fx:id="birthday"  styleClass="cell_small_label"/>

                    <Label fx:id="tags"  styleClass="cell_small_label"/>
                </children>
            </VBox>
            <ImageView fx:id="profileImage" fitHeight="90.0" fitWidth="90.0" preserveRatio="true" GridPane.columnIndex="1">
                <image>
                    <Image url="@../images/default_profile_picture.png" />
                </image>
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </HBox.margin>
            </ImageView>
        </children>
    </GridPane>
</HBox>
